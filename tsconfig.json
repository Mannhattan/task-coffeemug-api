{
    "compilerOptions": {
        "rootDir": "./src",
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2020",
        "outDir": "./build",
        "sourceMap": true,
        "strict": true,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}